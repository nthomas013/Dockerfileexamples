FROM drupal:10.5.5-php8.4-fpm-alpine3.21
RUN apk update && apk add --no-cache \
      git \
      libpng-dev \
      libjpeg-turbo-dev \
      freetype-dev \
      libwebp-dev \
      oniguruma-dev \
      libzip-dev \
      icu-dev \
      bash \
    && docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp \
    && docker-php-ext-install -j$(nproc) gd intl zip mbstring opcache
RUN chown -R www-data:www-data /var/www/html
EXPOSE 9000
CMD ["php-fpm"]
